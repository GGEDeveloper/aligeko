{
  "version": 2,
  "builds": [
    { 
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build:client && npm run build:server"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "public": true
} 